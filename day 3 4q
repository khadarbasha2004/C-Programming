#include <stdio.h>

int check_even_odd(int num);

int main() {
    int num, result;
    printf("Enter a number: ");
    scanf("%d", &num);
    result = check_even_odd(num);
    if (result == 1) {
        printf("%d is an even number.", num);
    } else {
        printf("%d is an odd number.", num);
    }
    return 0;
}

int check_even_odd(int num) {
    if (num % 2 == 0) {
        return 1;
    } else {
        return 0;
    }
}

