#include <stdio.h>

int main() {
    char name[50];
    int age;
    float height;

    printf("Enter the person's name: ");
    scanf("%s", name);
    printf("Enter the person's age: ");
    scanf("%d", &age);
    printf("Enter the person's height (in meters): ");
    scanf("%f", &height);

    printf("Name: %s\n", name);
    printf("Age: %d\n", age);
    printf("Height: %.2f meters\n", height);

    return 0;
}

